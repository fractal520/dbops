<ul class="monitor_logs">
    {% for monitor_log in monitor_logs %}
    <li class="monitor_log">
        <div class="monitor_log-content">
            <div class="monitor_log-body">
                {% if monitor_log.monitor_log %}
                    {{ monitor_log.monitor_log | safe }}
                {% else %}
                    {{ monitor_log.monitor_log }}
                {% endif %}
            </div>
        </div>
    </li>
    {% endfor %}
</ul>







            <div class="monitor_log-footer">
                {% if current_user == monitor_log.author %}
                <a href="{{ url_for('.edit', id=monitor_log.id) }}">
                    <span class="label label-primary">Edit</span>
                </a>
                {% elif current_user.is_administrator() %}
                <a href="{{ url_for('.edit', id=monitor_log.id) }}">
                    <span class="label label-danger">Edit [Admin]</span>
                </a>
                {% endif %}
                <a href="{{ url_for('.monitor_log', id=monitor_log.id) }}">
                    <span class="label label-default">Permalink</span>
                </a>
                <a href="{{ url_for('.monitor_log', id=monitor_log.id) }}#comments">
                    <span class="label label-primary">{{ monitor_log.comments.count() }} Comments</span>
                </a>
            </div>
